<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% else %>
  <div>Years:</div>
  <ol>
    <% @years.each do |y| %>
      <li><%= link_to y, drafts_path(year: y) %></li>
    <%end%>
  </ol>
  <div>Year: <%= @year %></div>
  <div>Rounds:</div>
  <ol>
    <% @rounds.each do |r| %>
      <li><%= link_to r, drafts_path(year: @year, round: r) %></li>
    <%end%>
  </ol>
  <div>Round: <%= @round %></div>
  <div>Draft Picks:</div>
  <br>
  <% @draft_picks.each do |p| %>
    <div> Pick: <%= p.pick %> </div>
    <div> Name: <%= p.player.name %> </div>
    <div> Team: <%= p.team.location %> <%= p.team.name %> </div>
    <div> College: <%= p.college&.name %> </div>
    <br>
  <% end %>
<% end %>


